extends layout

block content
    .container
        form(method='post',action='contact/send')
            h1 Contact Us
            .form-group
                label Name
                input.form-control(type='text',name='name',placeholder='Your Name ..')

            .form-group
                label Email
                input.form-control(type='email',name='email',placeholder='youremail@server.com')

            .form-group
                label Message
                textarea.form-control(name='message',placeholder='Your Message')

            button(type='submit' class='btn btn-info')  Submit
